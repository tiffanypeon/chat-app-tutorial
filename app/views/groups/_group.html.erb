<li>
  <div class="panel panel-default" data-group-id="<%= group.id %>">
    <div class="panel-heading">
      <%= link_to group.topic, '', class: 'toggle-window' %>
      <%= link_to 'x', membership_path(group.memberships.find_by(user_id: user.id)), class: 'btn btn-default btn-xs pull-right', remote: true, method: :delete %>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="messages-list">
        <ul>
          <%= render 'groups/group_content', messages: group.messages, user: user %>
        </ul>
      </div>
      <form class="new_group_message">
        <input name="group_id" type="hidden" value="<%= group.id %>">
        <input name="user_id" type="hidden" value="<%= user.id %>">
        <textarea name="body" class="form-control"></textarea>
        <input type="submit" class="btn btn-success" value="Send">
      </form>
    </div>
  </div>
</li>
